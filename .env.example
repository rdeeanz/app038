APP_NAME=App038
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=app038
DB_USERNAME=postgres
DB_PASSWORD=

# Fallback Database (Optional)
DB_FALLBACK_HOST=postgres_fallback
DB_FALLBACK_PORT=5432
DB_FALLBACK_DATABASE=app038
DB_FALLBACK_USERNAME=postgres
DB_FALLBACK_PASSWORD=

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Fallback Redis (Optional)
REDIS_FALLBACK_HOST=redis_fallback
REDIS_FALLBACK_PORT=6379
REDIS_FALLBACK_PASSWORD=
REDIS_FALLBACK_DB=0

# Cache and Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=rabbitmq

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=default

# RabbitMQ Fallback (Optional)
RABBITMQ_FALLBACK_HOST=rabbitmq_fallback
RABBITMQ_FALLBACK_PORT=5672
RABBITMQ_FALLBACK_USER=guest
RABBITMQ_FALLBACK_PASSWORD=

# Kafka Configuration (Optional)
KAFKA_BROKERS=kafka:9092
KAFKA_BROKERS_FALLBACK=kafka_fallback:9092
KAFKA_CONSUMER_GROUP_ID=app038-consumer
KAFKA_OFFSET_RESET=earliest
KAFKA_AUTO_COMMIT=true
KAFKA_COMPRESSION_TYPE=gzip

# Inertia.js Configuration
INERTIA_SSR_ENABLED=false
INERTIA_SSR_URL=http://127.0.0.1:13714

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1,yourdomain.com
SANCTUM_TOKEN_PREFIX=

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem Configuration
FILESYSTEM_DISK=local

# Vault Configuration (Optional - for secrets management)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=
VAULT_AUTH_METHOD=token
VAULT_ROLE_ID=
VAULT_SECRET_ID=
VAULT_APPROLE_MOUNT=approle
VAULT_K8S_ROLE=laravel-app
VAULT_K8S_MOUNT=kubernetes
VAULT_K8S_TOKEN_PATH=/var/run/secrets/kubernetes.io/serviceaccount/token
VAULT_KV_PATH=secret/data/app038
VAULT_KV_VERSION=2
VAULT_DB_PATH=database/creds/app038-readwrite
VAULT_TRANSIT_PATH=transit
VAULT_TRANSIT_KEY=app038-key
VAULT_CACHE_ENABLED=true
VAULT_CACHE_TTL=3600
VAULT_CACHE_STORE=redis
VAULT_TIMEOUT=5
VAULT_TLS_VERIFY=true
VAULT_TLS_CERT_PATH=
VAULT_TLS_KEY_PATH=
VAULT_TLS_CA_PATH=

# ERP Integration Configuration (Optional)
ERP_BASE_URL=https://api.erp.example.com
ERP_API_KEY=
ERP_TIMEOUT=30
ERP_RETRY_ATTEMPTS=3

# SAP Configuration (Optional)
SAP_CONNECTOR=odata
SAP_ODATA_BASE_URL=https://sap.example.com
SAP_ODATA_USERNAME=
SAP_ODATA_PASSWORD=
SAP_ODATA_TIMEOUT=30
SAP_RFC_HOST=
SAP_RFC_SYSTEM_NUMBER=00
SAP_RFC_CLIENT=100
SAP_RFC_USERNAME=
SAP_RFC_PASSWORD=
SAP_RFC_LANGUAGE=EN
SAP_IDOC_HOST=
SAP_IDOC_PORT=3300
